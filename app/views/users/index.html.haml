%h2 All users

= search_form_for @q do |f|
  = f.label :name_cont
  = f.search_field :name_cont

  -# = f.label :bookings_attended_cont
  -# = f.search_field :bookings_attended_cont

  = f.submit "Search"



= link_to 'Reset Search', users_path
.table-responsive
%table.table.table-striped#userstable
  %thead
    %tr
      %th Username
      %th Access
      %th Institution
      %th Email
      %th=sort_link(@q, :name, 'Name', default_order: :desc)
      %th Attended

  %tbody
    - @users_with_attended.each do |user|
      %tr
        %td= user.username
        %td= user.access
        %td= user.institution
        %td= user.email
        %td= user.name
        %td= user.bookings_attended
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

%br


= link_to 'New User', new_user_path

= form_tag import_users_path, multipart: true do
  = file_field_tag :file
  = submit_tag "Import"
