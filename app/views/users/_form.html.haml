-# frozen_string_literal: true
= simple_form_for(@user) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :username, placeholder: "Enter username"
    = f.label "User Access"
    %br
    = f.select :access,[['Admin',1],['Delegate', 2]]
    = f.input :institution, placeholder: "Enter Institution"
    = f.input :email, placeholder: "Enter Email Address"
    = f.input :name, placeholder: "Enter Name"
    -# - @booking.each do |b|
    -#   = b.input :attended

  .form-actions
    = f.button :submit
