-# frozen_string_literal: true
= simple_form_for(@timetable) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :conference, label: 'Conference'
    = f.association :event_id, label: 'Event'
    = f.input :day_num, label: 'Day Number'
    = f.input :start_time, label: 'Start time'
    = f.input :end_time, label: 'End time'

  .form-actions
    = f.button :submit, 'Submit Session'
