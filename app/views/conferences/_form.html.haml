-# frozen_string_literal: true
= simple_form_for(@conference) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :days, label: 'Number of Days', placeholder: "Enter Number of Days"
    = f.input :name, label: 'Conference name', placeholder: "Enter Conference Name"
    = f.input :location, label: 'Conference location', placeholder: "Enter Location"
    = f.input :start_date, label: 'Start Date'
    = f.input :end_date, label: 'End Date'

  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
