%h1 Listing events

%table
  %thead
    %tr
      %th Event
      %th Name
      %th Speaker
      %th Location
      %th Description
      %th
      %th
      %th

  %tbody
    - @events.each do |event|
      %tr
        %td= event.id
        %td= event.name
        %td= event.speaker
        %td= event.location
        %td= event.desc
        %td= link_to 'Show', event
        %td= link_to 'Edit', edit_event_path(event)
        %td= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Event', new_event_path
